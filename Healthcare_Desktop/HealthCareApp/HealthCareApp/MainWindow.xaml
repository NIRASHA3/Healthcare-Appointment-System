<Window x:Class="HealthCareApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Doctor Management" Height="450" Width="800" WindowState="Maximized">
    <Grid Background="LavenderBlush">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                  Text="Doctor Management"
                  FontSize="24"
                  FontWeight="Bold"
                  Margin="10"
                  Foreground="DarkSlateBlue"
                  HorizontalAlignment="Center"/>

        <Grid Grid.Row="1" Margin="10" Background="LavenderBlush">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <DataGrid x:Name="doctorGrid"
                     AutoGenerateColumns="True"
                     SelectionMode="Single"
                     Margin="0,0,10,0"/>

            <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="10">
                <Button Content="Add Doctor"
                        Margin="5"
                        Padding="10" 
                        FontSize="14" 
                        FontWeight="SemiBold"
                        Click="Add_Doctor"
                        Background="DarkSlateBlue"
                        Foreground="White"/>
                <Button Content="Update Doctor"
                        Margin="5"
                        Padding="5"
                        FontSize="14" 
                        FontWeight="SemiBold"
                        Click="Update_Doctor"
                        Background="DarkSlateBlue"
                        Foreground="White"/>
                <Button Content="Delete Doctor"
                        Margin="5"
                        Padding="5"
                        FontSize="14" 
                        FontWeight="SemiBold"
                        Click="Delete_Doctor"
                        Background="DarkSlateBlue"
                        Foreground="White"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>