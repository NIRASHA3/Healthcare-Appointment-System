<Window x:Class="HealthCareApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="400">
    <Grid Margin="10" Background="LavenderBlush">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Text="Username" Margin="5" Padding="5"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="UsernameTextBox" Margin="5" Padding="5"/>

        <TextBlock Grid.Row="1" Text="Password" Margin="5" Padding="5"/>
        <PasswordBox Grid.Row="1" Grid.Column="1" x:Name="PasswordBox" Margin="5" Padding="5"/>

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Login" Width="100" Height="50" Margin="5" Padding="5" FontWeight="SemiBold" 
                   Click="Login_Click" Background="DarkSlateBlue" Foreground="White"/>
            <Button Content="Cancel" Width="100" Height="50" Margin="5" Padding="5" FontWeight="SemiBold" 
                   Click="Cancel_Click" Background="DarkSlateBlue" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>